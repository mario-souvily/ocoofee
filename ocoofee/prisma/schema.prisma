generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  clerkId   String   @unique // ID unique provenant de Clerk
  prenom    String?
  nom       String?
  email     String   @unique
  role      Boolean  @default(false) // false = user, true = admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  commandes Commande[]
  carts     Cart[]
}

model Cafe {
  id          Int    @id @default(autoincrement())
  nom         String
  type        String
  origine     String
  quantite    String
  description String
  prix        Float
  image       String
  categorie   String // "grain" | "moulu"

  items    CommandeItem[]
  CartItem CartItem[]
}

model Commande {
  id        Int      @id @default(autoincrement())
  date      DateTime
  prix      Float
  adresse   String
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User           @relation(fields: [userId], references: [id])
  items     CommandeItem[]
  cartItems CartItem[]
}

model CommandeItem {
  id         Int   @id @default(autoincrement())
  commandeId Int
  cafeId     Int
  quantite   Int
  prix       Float

  commande Commande @relation(fields: [commandeId], references: [id])
  cafe     Cafe     @relation(fields: [cafeId], references: [id])
}

model Cart {
  id        Int        @id @default(autoincrement())
  userId    String // ðŸ”¹ userId de Clerk
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [clerkId])
  items     CartItem[]
}

model CartItem {
  id       Int    @id @default(autoincrement())
  userId   String
  cartId   Int
  cafeId   Int
  quantite Int
  prix     Float

  cart       Cart      @relation(fields: [cartId], references: [id])
  cafe       Cafe      @relation(fields: [cafeId], references: [id])
  Commande   Commande? @relation(fields: [commandeId], references: [id])
  commandeId Int?
}
